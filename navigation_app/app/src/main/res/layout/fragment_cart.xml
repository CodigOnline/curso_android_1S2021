<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CartFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_btn_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/pagar"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/cart_tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="textEnd"
        android:text="TOTAL 20â‚¬"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/cart_btn_pagar"/>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/cart_rv"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/cart_tv_total"
       tools:listitem="@layout/item_cart_recycler_view"/>



</androidx.constraintlayout.widget.ConstraintLayout>